{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2017", "esnext"],
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./config/*"],
      "@lib/*": ["./lib/*"],
      "@contexts/*": ["./contexts/*"],
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@config": ["./config/index.ts"],
      "@services/*": ["./services/*"],
      "@utils/*": ["./utils/*"],
      "@actions/*": ["./redux/actions/*"],
      "@reducers/*": ["./redux/reducers/*"],
      "@reduxTypes/*": ["./redux/types/*"],
      "@reduxTypes": ["./redux/types/index.ts"],
      "@lib": ["./lib/index.ts"],
      "@utils": ["./utils/index.ts"],
      "@contexts": ["./contexts/index.ts"],
      "@components": ["components/index.ts"],
      "@containers": ["containers/index.ts"],
      "@services": ["./services/index.ts"],
      "@hooks/*": ["./hooks/*"]
    }
  }
}
